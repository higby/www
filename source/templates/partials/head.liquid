<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>{{ title }}</title>

<link rel="stylesheet" href="/main.css">
{%- for item in styles %}<link rel="stylesheet" href="/{{ item }}.css">{% endfor %}
<link rel="preload" href="/fonts/IBMPlexSansVar.woff2" as="font" type="font/woff2" crossorigin="">

<meta name="robots" content="noindex">
<meta name="description" content="{{ description | default: site.description }}">
<meta name='author' content='{{ author.name }}'>
<meta name='generator' content='{{ eleventy.generator }}'>
<link rel='canonical' href='{{ page.url | htmlBaseUrl: site.url }}'>
<link rel="alternate" type="application/rss+xml" title="{{ site.description }}" href="/feed.xml">

<link rel="me" href="mailto:{{ author.email }}">
<link rel="me" href="{{ author.mastodon }}">
<link rel="webmention" href="https://webmention.io/higby.io/webmention">

<link rel='icon' href='/favicon.ico' sizes='any'>
<link rel='icon' href='data:image/svg+xml,{% capture favicon %}{% include 'icons/bee.svg' %}{% endcapture %}{{ favicon | encodeURI }}' type='image/svg+xml'>
<link rel='apple-touch-icon' href='/apple-touch-icon.png'>
<link rel='manifest' href='/site.webmanifest'>

<meta name="color-scheme" content="light dark">
<meta name="theme-color" content="#6e47ec" media="(prefers-color-scheme: light)">
<meta name="theme-color" content="#ec4672" media="(prefers-color-scheme: dark)">

<meta name="fediverse:creator" content="higby@front-end.social">